{{>layout/header}}
<h1>ShareMusic</h1>
<div class="col-md-12">
    <a href="/save_album" class="btn btn-primary" role="button">앨범등록</a>
    <a href="/search_track" class="btn btn-primary" role="button">트랙검색</a>
</div>
<br>
<table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
        <th>ID</th>
        <th>앨범 이름</th>
        <th>트랙 수</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#albums}}
        <tr>
            <td>{{id}}</td>
            <td><a href="/albums/{{id}}">{{name}}</a></td>
            <td>{{trackCount}}</td>
        </tr>
    {{/albums}}
    </tbody>
</table>
{{>layout/footer}}