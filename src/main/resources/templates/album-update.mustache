{{>layout/header}}
<h2>앨범 수정</h2>
<div class="col-md-12">
    <form>
        <div class="form-group">
            <label for="id">앨범 번호</label>
            <input type="text" class="form-control" id="album_id" value="{{album.id}}"/>
        </div>
        <div class="form-group">
            <label for="name">앨범 이름</label>
            <input type="text" class="form-control" id="album_name" value="{{album.name}}"/>
        </div>
        <div class="form-group">
            <label for="trackCount">트랙 수</label>
            <input type="text" class="form-control" id="trackCount" value="{{album.trackCount}}"/>
        </div>
    </form>

    <a href="/" class="btn btn-primary">뒤로</a>
    <button class="btn btn-success" id="btn-update-album" role="button">저장</button>
    <button class="btn btn-danger" id="btn-delete-album" role="button">앨범 삭제</button>

    <br>
    <h2>트랙</h2>

    <br>
    <button id="btn-add-track-tb" class="btn btn-primary mb-sm-2" role="button">트랙 추가</button>

    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>ID</th>
            <th>트랙 이름</th>
            <th>아티스트</th>
        </tr>
        </thead>
        <tbody id="tbody">

        {{#tracks}}
            <tr>
                <td><input name="track" class="form-control" type="text" value="{{id}}"/></td>
                <td><input name="track" class="form-control" type="text" value="{{name}}"/></td>
                <td><input name="track" class="form-control" type="text" value="{{artist}}"/></td>
            </tr>
        {{/tracks}}
        </tbody>
    </table>
</div>
{{>layout/footer}}